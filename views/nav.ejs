<div class="flex items-center gap-4 py-4 px-6 bg-[#f9781d] md:py-6 md:px-8">
    <img src="/assets/orange-part-2-svgrepo-com.svg" alt="Orange Logo" class="w-8 h-8">
    <h1 class="text-3xl font-bold text-[#fff7ed]">Orange</h1>
    <div class="flex gap-4 ml-auto">
        <a href="/" class="bg-[#fff7ed] p-2 rounded-[7px] text-[#f9781d] hover:bg-orange-100 flex items-center">
            <i class="fa-solid fa-home"></i>
            <span class="ml-2 hidden md:inline">Home</span>
        </a>
        <% if (typeof user !== 'undefined' && user) { %>
        <a href="/create" class="bg-[#fff7ed] p-2 rounded-[7px] text-[#f9781d] hover:bg-orange-100 flex items-center">
            <i class="fa-solid fa-pen"></i>
            <span class="ml-2 hidden md:inline">New Post</span>
        </a>
        <a href="/logout" class="bg-[#fff7ed] p-2 rounded-[7px] text-[#f9781d] hover:bg-orange-100 flex items-center">
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
            <span class="ml-2 hidden md:inline">Log Out</span>
        </a>
        <% } else { %>
        <a href="/login" class="bg-[#fff7ed] p-2 rounded-[7px] text-[#f9781d] hover:bg-orange-100 flex items-center">
            <i class="fa-solid fa-arrow-right-to-bracket"></i>
            <span class="ml-2 hidden md:inline">Log In</span>
        </a>
        <a href="/signup" class="bg-[#fff7ed] p-2 rounded-[7px] text-[#f9781d] hover:bg-orange-100 flex items-center">
            <i class="fa-solid fa-user-plus"></i>
            <span class="ml-2 hidden md:inline">Sign Up</span>
        </a>
        <% } %>
    </div>
</div>
